<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TestRoom" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/blue_500</item> <!-- Main blue -->
        <item name="colorPrimaryVariant">@color/blue_700</item> <!-- Darker blue -->
        <item name="colorOnPrimary">@color/white</item> <!-- Text color on primary (white) -->

        <!-- Secondary brand color (lighter shades of blue). -->
        <item name="colorSecondary">@color/light_blue_300</item> <!-- Light blue -->
        <item name="colorSecondaryVariant">@color/light_blue_200</item> <!-- Lighter blue -->
        <item name="colorOnSecondary">@color/black</item> <!-- Text color on secondary (black) -->

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item> <!-- Navigation bar color -->
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Theme.TestRoom.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TestRoom.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TestRoom.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>