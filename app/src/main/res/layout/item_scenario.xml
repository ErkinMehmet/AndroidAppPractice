<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="?android:attr/selectableItemBackground">

    <!-- Text information section (85% of the space) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.85"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loan Title"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/textViewLoan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loan Amount"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/textViewConditions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Interest Rate"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/textViewActualPayments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Date"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="8dp"/>
    </LinearLayout>

    <!-- Buttons section (15% of the space) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="111dp"
        android:layout_weight="0.15"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingStart="6dp">


        <Button
            android:id="@+id/buttonModifier"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="Modifier"
            android:drawableTop="@drawable/ic_modifier"
            android:gravity="center"
            android:padding="0dp"
            android:text=""
            android:background="@android:color/transparent"/>

        <Button
            android:id="@+id/buttonSupprimer"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="Supprimer"
            android:drawableTop="@drawable/ic_supprimer"
            android:gravity="center"
            android:padding="0dp"
            android:text=""
            android:background="@android:color/transparent"/>

    </LinearLayout>

</LinearLayout>
